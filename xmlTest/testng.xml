      <class name="xmlTest.xmlTest1">
       <methods>
        <include name="setup"/>
        <include name="Invalid_Login_Cred"/>
        <include name="Close"/>
       </methods>
      </class>   
    </classes>
  </test> <!-- Login Page Validation -->
</suite> <!-- Facebook Login Page -->
